<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.Ps_user_mapper" >
    <select id="select_user_byName" parameterType="java.lang.String" resultType="pojo.User">
        SELECT * FROM user
        <if test="_parameter !=null and _parameter !=''">
        WHERE user_name=#{user_name}
        </if>
    </select>
    <update id="update_user_byName" parameterType="pojo.User">
        UPDATE user SET phone=#{phone},address=#{address},login_type=#{login_type},logo=#{logo},pass_word=#{pass_word},email=#{email} WHERE user_name=#{user_name}
    </update>
    <insert id="insert_user" parameterType="pojo.User">
        INSERT INTO user (user_name,pass_word,login_type,logo,phone,address,email) VALUES (#{user_name},#{pass_word},#{login_type},#{logo},#{phone},#{address},#{email})
    </insert>
    <delete id="del_user" parameterType="java.lang.String">
        DELETE FROM user WHERE user_name=#{user_name}
    </delete>
</mapper>