<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.Ps_user_mapper" >
    <select id="select_user_byName" parameterType="java.lang.String" resultType="pojo.User">
        SELECT * FROM user
        <if test="_parameter !=null and _parameter !=''">
        WHERE user_name=#{user_name}
        </if>
    </select>
    <update id="update_user_byName" parameterType="pojo.User">
        UPDATE user SET phone=#{phone},address=#{address},login_type=#{login_type},logo=#{logo},pass_word=#{pass_word} WHERE user_name=#{user_name}
    </update>
    <insert id="insert_user" parameterType="pojo.User">
        INSERT INTO user (user_name,pass_word,login_type,logo,phone,address) VALUES (#{user_name},#{pass_word},#{login_type},#{logo},#{phone},#{address})
    </insert>
    <delete id="del_user" parameterType="java.lang.String">
        DELETE FROM user WHERE user_name=#{user_name}
    </delete>

    <insert id="insert_work_start" parameterType="java.lang.String" >
        INSERT INTO work_sign (user_name,morning_work,afternoon_work,work_start,work_end) VALUES (#{user_name},#{morning_work},#{afternoon_work},#{work_start},#{work_end})
    </insert>
    <update id="update_work" parameterType="java.util.HashMap" >
        UPDATE work_sign SET morning_work=#{morning_work},afternoon_work=#{afternoon_work},work_end=#{work_end} WHERE user_name=#{user_name} AND id=#{id}
    </update>

    <select id="select_work_sign_byUser" parameterType="java.lang.String" resultType="java.util.HashMap">
        SELECT * FROM work_sign WHERE user_name=#{user_name}
    </select>
    <select id="select_max_id" parameterType="java.lang.String" resultType="java.lang.Integer">
        SELECT max(id) FROM work_sign WHERE user_name=#{user_name}
    </select>
    <delete id="del_work_sign" parameterType="java.lang.String">
        DELETE FROM work_sign WHERE user_name=#{user_name}
    </delete>

</mapper>